{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FR test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/wd/test_file_reader.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/wd",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build FR test",
            "windows": {
                "program": "${workspaceFolder}/wd/test_file_reader.exe"
            },
            "linux": {
                "program": "${workspaceFolder}/wd/test_file_reader",
                "MIMode": "gdb"
            }
        }
    ]
}